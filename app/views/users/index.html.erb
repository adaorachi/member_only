<h1 class="text-center display-5 my-4">All members<h1>
<% @users.each do |user| %>
<div class="card my-5">
  <h5 class="card-header">
    <%= link_to user.name, user_path(user) %>
  </h5>
  <div class="card-body">
    <div class="image">
       <%= link_to gravatar_for(user, size: 60), user_path(user) %>
    </div>
    <div class="info">
      <p class="card-text">Username: @<%= link_to user.username, user_path(user) %></p>
      <p class="card-text">Email: <%= user.email %></p>
      <p class="card-text"><%= user_post_count(user.posts) %></p>
      <p class="card-text">Member since:  <%= user.created_at.to_date %></p>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to "View Profile", user_path(user), class: "btn btn-primary" %>
  </div>
</div>
<% end %>
