<h1 class="my-4 display-5 text-center"><%= @user.name %>'s Profile Page</h1>

<div class="profile_body">
  <div class="card">
    <div class="card-header">
      @<%= @user.username %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= gravatar_for(@user, size: 50) %> <%= @user.email %></h5>
    </div>
  </div>

  <h1 class="text-center my-3">Posts</h1>
  <%= render @posts %>


